{
  "manifest_version": 3,
  "name": "colour-picker",
  "description": "A colour picker chrome Extension",
  "version": "1.0.0",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png"
  },

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "activeTab", "storage"]
}
